<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/imgGheChonC"
        android:layout_width="121dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/images3" />

    <TextView
        android:id="@+id/tvNameChonC"
        android:layout_width="245dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="aaaa"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgGheChonC"
        app:layout_constraintTop_toTopOf="@+id/imgGheChonC" />

    <TextView
        android:id="@+id/tvGiaChonC"
        android:layout_width="102dp"
        android:layout_height="31dp"
        android:text="gisa"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tvNameChonC"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/button3"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bgbutton"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tvNameChonC"
        app:layout_constraintTop_toBottomOf="@+id/tvNameChonC" />

    <Button
        android:id="@+id/button4"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:background="@drawable/bgbutton"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/tvNameChonC"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3" />
</androidx.constraintlayout.widget.ConstraintLayout>